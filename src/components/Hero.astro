---
import { Image } from "astro:assets";
import { useTranslations } from "../libs/i18n";
import hero_image from "../assets/hero-image.png";

const { t, l } = useTranslations(Astro.url);
---

<section class="hero bg-base-100 py-20">
    <div class="hero-content flex-col lg:flex-row-reverse">
        <div class="lg:w-1/2">
            <Image
                src={hero_image}
                alt="OUS Metaverse"
                class="rounded-lg shadow-xl max-w-full"
            />
        </div>
        <div class="lg:w-1/2">
            <h1 class="text-4xl font-bold text-base-content md:text-5xl lg:text-6xl">
                {
                    t({
                        ja: "メタバースをもっと身近に",
                        en: "Bringing the Metaverse Closer to Everyone",
                        zh: "让元宇宙更贴近生活",
                    })
                }
            </h1>
            <p class="py-6 text-xl text-base-content/70">
                {
                    t({
                        ja: "OUS Metaverseは岡山理科大学の公認メタバースサークルです。私たちは大学生活をメタバースでより豊かにするために活動しています。",
                        en: "OUS Metaverse is an official metaverse circle at Okayama University of Science. We are working to enhance university life through the metaverse.",
                        zh: "OUS Metaverse是冈山理科大学官方认证的元宇宙社团。我们致力于通过元宇宙提升大学生活。",
                    })
                }
            </p>

            <a
                href={l("/join")}
                class="btn btn-primary join-item"
            >
                {
                    t({
                        ja: "サークルに参加する",
                        en: "Join Our Circle",
                        zh: "加入我们的社团",
                    })
                }
            </a>
            <a
                href={l("/about")}
                class="btn btn-outline btn-primary join-item"
            >
                {
                    t({
                        ja: "詳しく知る",
                        en: "Learn More",
                        zh: "了解更多",
                    })
                }
            </a>
        </div>
    </div>
</section>
